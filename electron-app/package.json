{
  "name": "basketball-roster-manager",
  "version": "3.0.1",
  "description": "Cross-platform Basketball Roster Manager for public address announcers",
  "main": "src/main.js",
  "author": "Joshua Carroll <joshua@carrollsportsmedia.com>",
  "license": "MIT",
  "homepage": "https://github.com/JoshuaCarroll/BasketballRosterManager",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "rebuild": "electron-rebuild",
    "prebuild": "npm run rebuild",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "build:simple": "npm run pack && powershell -Command \"Compress-Archive -Path 'dist/win-unpacked/*' -DestinationPath 'dist/Basketball-Roster-Manager-v3.0.0-win64.zip' -Force\""
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.carrollsportsmedia.basketball-roster-manager",
    "productName": "Basketball Roster Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.sports",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "certificateFile": null,
      "certificatePassword": null,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Game",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "JoshuaCarroll",
      "repo": "BasketballRosterManager"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "sqlite3": "^5.1.6"
  }
}
