{
  "name": "basketball-roster-manager",
  "version": "3.1.0",
  "description": "Cross-platform Basketball Roster Manager for public address announcers",
  "main": "src/main.js",
  "author": "Joshua Carroll",
  "license": "MIT",
  "homepage": "https://github.com/JoshuaCarroll/BasketballRosterManager",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "postinstall": "electron-builder install-app-deps",
    "prebuild": "echo Skipping rebuild - using prebuilt binaries",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish=never",
    "build:simple:win": "npm run pack && powershell -Command \"Compress-Archive -Path 'dist/win-unpacked/*' -DestinationPath 'dist/Basketball-Roster-Manager-v3.1.0-win64.zip' -Force\"",
    "build:simple:mac": "npm run pack && cd dist && zip -r Basketball-Roster-Manager-v3.1.0-mac.zip mac",
    "build:simple": "npm run pack"
  },
  "devDependencies": {
    "electron": "^35.7.5",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.aa5jc.basketball-roster-manager",
    "productName": "Basketball Roster Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "npmRebuild": false,
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.sports",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "certificateFile": null,
      "certificatePassword": null,
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Game",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "JoshuaCarroll",
      "repo": "BasketballRosterManager"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "sqlite3": "^5.1.6"
  }
}
